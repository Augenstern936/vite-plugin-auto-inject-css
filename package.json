{
  "name": "vite-plugin-auto-inject-css",
  "version": "1.0.0",
  "description": "自动注入对应的 Style 文件及 UI 库组件样式，无需关心样式引入问题，助力于组件库开发 💪",
  "main": "dist/index.js",
  "module": "dist/index.ts",
  "types": "dist/index.d.ts",
  "packageManager": "pnpm@8.10.2",
  "scripts": {
    "cz": "git add . && czg",
    "build": "tsup",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache .",
    "dry-run": "npx nx release --dry-run --verbose",
    "version:publish": "npx nx release version && pnpm only:publish",
    "first:publish": "npx nx release publish --first-release",
    "only:publish": "npx nx release publish --tag",
    "release": "npx nx release"
  },
  "keywords": [
    "vite-plugin",
    "plugin",
    "vite",
    "css",
    "style",
    "inject",
    "auto",
    "vue",
    "lib",
    "component",
    "element-plus"
  ],
  "author": "<haidu 1720581634@qq.com>",
  "license": "MIT",
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "bugs": "https://github.com/Augenstern936/vite-plugin-auto-inject-css/issues",
  "homepage": "https://github.com/Augenstern936/vite-plugin-auto-inject-css",
  "repository": {
    "type": "git",
    "url": "https://github.com/Augenstern936/vite-plugin-auto-inject-css"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@eslint/js": "^9.9.1",
    "@nx/js": "19.6.5",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "cz-git": "^1.9.4",
    "czg": "^1.9.4",
    "element-plus": "^2.8.1",
    "eslint": "^9.9.1",
    "eslint-plugin-import-x": "^4.2.1",
    "eslint-plugin-n": "^17.10.2",
    "eslint-plugin-regexp": "^2.6.0",
    "lint-staged": "^15.2.10",
    "nx": "19.6.5",
    "prettier": "^3.3.3",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0",
    "vite": "^5.4.7"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{js,ts,json}": "eslint --cache --fix"
  }
}
